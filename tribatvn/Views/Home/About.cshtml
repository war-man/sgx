@using Common.Utilities;
@using Helpers;
@using ViewModels;
@model ContentViewModel;

@{
    Layout = "~/Views/Shared/_Wingman.cshtml";
    var language = ViewData["Language"].ToString();
}

@await Html.PartialAsync("MenuPartial", Model.Menu)

<div class="main-container">
    <nav aria-label="breadcrumb" role="navigation" class="bg-primary text-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">@Html.Raw(TextHelper.GetText(525, language))</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            @Model.Entity.Name
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </nav>

    <section>
        <div class="container">
            <div class="row">
                <div class="col-12 col-md-2 mb-5">
                    <nav class="nav flex-md-column mb-2 x-sub-nav-about">
                        <a href="@Model.linkGioiThieu" class="nav-link">@Model.textGioiThieu</a>
                        <hr class="short">
                        <a href="@Model.linkDoiTac" class="nav-link">@Model.textDoiTac</a>
                        <hr class="short">
                        <a href="@Model.linkCoCauToChuc" class="nav-link">@Model.textCoCauToChuc</a>
                        <hr class="short">
                        <a href="@Model.linkTamNhinSuMang" class="nav-link">@Model.textTamNhinSuMang</a>
                        <hr class="short">
                        <a href="@Model.linkVanBanThamKhao" class="nav-link">@Model.textVanBanThamKhao</a>
                        <hr class="short">
                        <a href="@Model.linkCoSoPhapLy" class="nav-link">@Model.textCoSoPhapLy</a>
                        <hr class="short">
                        <a href="@Model.linkLichSuHinhThanh" class="nav-link">@Model.textLichSuHinhThanh</a>
                        <hr class="short">
                        <a href="@Model.linkCongNgheXuLy" class="nav-link">@Model.textCongNgheXuLy</a>
                        <hr class="short">
                        <a href="@Model.linkCongSuatXuLy" class="nav-link">@Model.textCongSuatXuLy</a>
                    </nav>
                </div>
                <div class="col-12 col-md-10">
                    @Html.Raw(Model.Entity.Body)

                    @if (string.IsNullOrEmpty(Model.Entity.Body))
                    {
                        @await Html.PartialAsync("UpdatePartial")
                    }
                </div>
            </div>
        </div>
    </section>
</div>

@await Html.PartialAsync("FooterPartial", Model.Menu)