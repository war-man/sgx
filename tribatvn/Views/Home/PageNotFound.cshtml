@using Common.Utilities;
@using Helpers;
@using ViewModels;
@model ContentViewModel;

@{
    Layout = "~/Views/Shared/_Wingman.cshtml";
    var language = ViewData["Language"].ToString();
}

@await Html.PartialAsync("MenuPartial", Model.Menu)

<div class="main-container">
    <section class="space-lg bg-white">
        <div class="container">
            <div class="row align-items-center justify-content-around">
                <div class="col-12 col-md-6 col-lg-5 text-center text-md-left section-intro">
                    <h1 class="display-3">@Html.Raw(ViewBag.Title)</h1>
                    <span class="lead">
                        @Html.Raw(TextHelper.GetText(542, language))
                    </span>
                    <a href="javascript:history.back()" class="btn btn-success btn-lg">@Html.Raw(TextHelper.GetText(543, language))</a>
                    <a href="#" class="btn btn-success btn-lg">@Html.Raw(TextHelper.GetText(525, language))</a>
                </div>
                <!--end of col-->
                <div class="col-12 col-md-6 col-lg-6">
                    <img alt="Image" class="img-fluid w-100" src="~/assets/wingman/img/graphic-golden-gate-bridge.svg">
                </div>
                <!--end of col-->
            </div>
            <!--end of row-->
        </div>
        <!--end of container-->
    </section>
</div>

@await Html.PartialAsync("FooterPartial", Model.Menu)