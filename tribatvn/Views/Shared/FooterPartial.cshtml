@using Helpers;
@using ViewModels;
@model MenuViewModel;
@{
    var language = ViewData["Language"].ToString();
    var about = Model.MenusContent.Where(m => m.Code.Equals("about")).First();
    var news = Model.MenusContent.Where(m => m.Code.Equals("news")).First();
    var contact = Model.MenusContent.Where(m => m.Code.Equals("contact")).First();
}

<footer class="bg-gray text-light footer-long">
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-4">
                @*<img alt="Image" src="assets/wingman/img/logo-white.svg" class="mb-4" />*@
                <img alt="Tribat" src="~/images/saigonxanhtrans.png" class="mb-1" />
                <p class="text-muted">
                    &copy; 2018 Tribat
                    <br />@Html.Raw(TextHelper.GetText(521, language))
                    <br /><a href="https://goo.gl/maps/6bHjuivZjBS2" target="_blank">@Html.Raw(TextHelper.GetText(522, language))</a>
                    <br />@Html.Raw(TextHelper.GetText(523, language)) 
                    <a href="tel:02839971869" class="hotline">(028)-39971869</a> − <a href="tel:02838442457" class="hotline">(028)-38442457</a>
                    <br />Fax: 08-39971869
                    <br />MST: 0302519810
                </p>
            </div>
            <!--end of col-->
            <div class="col-12 col-md-8">
                <span class="h5">@Html.Raw(TextHelper.GetText(520, language))</span>
                <div class="row no-gutters">
                    <div class="col-6 col-lg-3">
                        <h6>@Html.Raw(TextHelper.GetText(524, language))</h6>
                        <ul class="list-unstyled">
                            <li>
                                <a href="/">@Html.Raw(TextHelper.GetText(525, language))</a>
                            </li>
                            <li>
                                <a href="/c/@contact.Url">@contact.Title</a>
                            </li>
                            <li>
                                <a href="/faq">FAQ</a>
                            </li>
                            <li>
                                <a href="/n/@news.Url">@news.Title</a>
                            </li>
                        </ul>
                    </div>
                    <!--end of col-->
                    <div class="col-6 col-lg-3">
                        <h6>@Html.Raw(TextHelper.GetText(501, language))</h6>
                        <ul class="list-unstyled">
                            @foreach (var menu in Model.MenusProduct)
                            {
                            <li>
                                <a href="@menu.Url">@menu.Title</a>
                            </li>
                            }
                        </ul>
                    </div>
                    <!--end of col-->
                    <div class="col-6 col-lg-3">
                        <h6>@Html.Raw(TextHelper.GetText(506, language))</h6>
                        <ul class="list-unstyled">
                            @foreach (var menu in Model.MenusProccess)
                            {
                            <li>
                                <a href="@menu.Url">@menu.Title</a>
                            </li>
                            }
                        </ul>
                    </div>
                    <!--end of col-->
                    <div class="col-6 col-lg-3">
                        <h6>@Html.Raw(TextHelper.GetText(527, language))</h6>
                        <ul class="list-unstyled">
                            <li>
                                <a href="/a/@about.Url">@about.Title</a>
                            </li>
                            <li>
                                <a href="/">@Html.Raw(TextHelper.GetText(528, language))</a>
                            </li>
                            <li>
                                <a href="/">@Html.Raw(TextHelper.GetText(529, language))</a>
                            </li>
                        </ul>
                    </div>
                    <!--end of col-->
                </div>
                <!--end of row-->
            </div>
            <!--end of col-->
        </div>
        <!--end of row-->
    </div>
    <!--end of container-->
</footer>