    @*<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>*@
    <script type="text/javascript" src="~/lib/jquery3.2.1/dist/jquery-3.2.1.min.js"></script>
</head>

<body>
