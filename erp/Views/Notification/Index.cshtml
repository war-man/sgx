@using Common.Utilities;
@using Common.Enums;
@using ViewModels;
@model NotificationViewModel;

@{
    ViewData["Title"] = Model.Notification.Title;
    Layout = "~/Views/Shared/_LayoutNotification.cshtml";
}

<nav aria-label="breadcrumb">
    <div class="container">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Notification.Title</li>
        </ol>
    </div>
</nav>

<div class="container">
    <div class="row">
        <div class="col-12">
            @Html.Raw(Model.Notification.Content)
        </div>
    </div>
    @if (Model.Notification.Documents != null && Model.Notification.Documents.Count > 0)
    {
        foreach (var item in Model.Notification.Documents)
        {
            <div class="row mb-3">
                <div class="col-12">
                    <iframe src="@item.Path/@item.FileName" style="width:100%; height:900px;" frameborder="0"></iframe>
                </div>
            </div>
        }
    }
</div>

