@using System;
@using Common.Utilities;
@using Common.Enums;
@using System.Globalization;
@using ViewModels
@model TimeKeeperViewModel

@{
    Layout = "~/Views/Shared/_LayoutSocialFb.cshtml";
    CultureInfo culture = CultureInfo.CreateSpecificCulture("en-US");
    var login = User.Identity.Name;
}

<div class="main-container">
    <nav aria-label="breadcrumb" role="navigation" class="bg-primary text-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/@Constants.LinkTimeKeeper.Main/@Constants.LinkTimeKeeper.OvertimeList">Danh sách tăng ca</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            @Model.Name
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </nav>

    <!-- MAIN -->
    <section class="flush-with-above height-80 d-block">
        <div class="container">
            <!-- FILTER -->
            <form method="post" action="/@Constants.LinkTimeKeeper.Main/@Constants.LinkTimeKeeper.OvertimeData" id="form-main">
                @{
                    var fromdatesearch = Model.Tu.ToString("dd/MM/yyyy");
                }
                <input type="hidden" value="0" class="isChange" />
                <input type="hidden" value="/@Constants.LinkTimeKeeper.Main/@Constants.LinkTimeKeeper.OvertimeData" class="link" />
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Ngày</label>
                    <div class="col-sm-10">
                        <input class="form-control datepicker datepicker-lg from-date" value="@fromdatesearch" />
                        <input type="hidden" name="Tu" class="tu-ngay" value="@Model.Tu.ToString("MM-dd-yyyy")" />
                    </div>
                </div>
                <div class="form-group row">
                    <label for="staticEmail" class="col-sm-2 col-form-label">Loại tăng ca</label>
                    <div class="col-sm-10">
                        <input type="text" readonly class="form-control-plaintext" id="staticEmail" value="@Constants.TimeWork(Utility.GetTypeDate(Model.Tu))">
                    </div>
                </div>
                <div class="form-group">
                    <label>Danh sách nhân viên</label>
                    @*<br />
            <a href="javascript:;" class="btn btn-link btn-outline-info btn-add-user" title="Thêm nhân viên tăng ca"><i class="fas fa-user-plus"></i> Thêm nhân viên tăng ca</a>
            <span class="small">Nếu danh sách bên dưới không tồn tại</span>*@
                    <div class="row">
                        <div class="col-12 table-responsive mb-1">
                            <table class="table table-sm table-striped table-bordered table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">Họ và Tên</th>
                                        <th scope="col">Giờ Tăng ca</th>
                                        <th scope="col">Mã NV</th>
                                        <th scope="col">Chức vụ</th>
                                    </tr>
                                </thead>
                                <tbody class="font-14">
                                    @{
                                        int i = 1;
                                        int iE = 0;
                                        foreach (var item in Model.OvertimeEmployees)
                                        {
                                            <tr>
                                                <th scope="row">
                                                    @i
                                                    <input type="hidden" name="OvertimeEmployees[@iE].Id" value="@item.Id" />
                                                    <input type="hidden" name="OvertimeEmployees[@iE].EmployeeId" value="@item.EmployeeId" />
                                                    <input type="hidden" class="iE-value" value="@iE" />
                                                </th>
                                                <td nowrap>
                                                    @item.EmployeeName
                                                </td>
                                                <td>
                                                    <input value="@item.Hour" name="OvertimeEmployees[@iE].Hour" class="form-control width100 numeric hour-@iE" data-id="hour-@iE" />
                                                </td>
                                                <td nowrap>
                                                    @item.EmployeeCode
                                                </td>
                                                <td nowrap>
                                                    @item.ChucVuName
                                                </td>
                                            </tr>
                                            i++;
                                            iE++;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Tạo tăng ca</button>

                <div>
                    <code>Suất cơm</code> <small>được cập nhật tự động sau khi các bên liên quan đồng ý lệnh tăng ca và theo quy định của công ty.</small>
                </div>
            </form>
        </div>
    </section>
</div>

@section scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script type="text/javascript" src="~/js/timer/overtime-data.js?@DateTime.Now.Ticks"></script>
    }
}


