                <div class="card card-sm">
                    <div class="card-header bg-secondary d-flex justify-content-between align-items-center">
                        <form method="get" action="/@Constants.LinkTimeKeeper.Main/@Constants.LinkTimeKeeper.Timer" id="form-main">
                            <div id="search" class="col-12">
                                <div class="row mb-3">
                                    <div class="col-md-4 col-sm-6 col-12">
                                        <label class="control-label">Nơi làm việc</label>
                                        <select asp-for="Nl" class="form-control form-control-lg ddlNl">
                                            @foreach (var congtychinhanh in Model.CongTyChiNhanhs)
                                            {
                                                <option value="@congtychinhanh.Id">@congtychinhanh.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-12">
                                        <label class="control-label">Khối chức năng:</label>
                                        <select asp-for="Kcn" class="form-control form-control-lg ddlKcn">
                                            @foreach (var item in Model.KhoiChucNangs)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-12">
                                        <label class="control-label">Phòng ban:</label>
                                        <select asp-for="Pb" class="form-control form-control-lg ddlPb">
                                            @foreach (var item in Model.PhongBans)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-12">
                                        <label class="control-label">Bộ phận:</label>
                                        <select asp-for="Bp" class="form-control form-control-lg ddlBp">
                                            @foreach (var item in Model.BoPhans)
                                            {
                                                <option value="@item.Id">@item.Name</option>
                                            }
                                            
                                        </select>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label class="control-label">Nhân viên</label>
                                            <select asp-for="Id" class="form-control form-control-lg js-select2-basic-single ddlEmployeeId">
                                                <option value="">Tất cả</option>
                                                @foreach (var employee in Model.Employees)
                                                {
                                                    string displayTitle = string.Empty;
                                                    if (!string.IsNullOrEmpty(employee.Title))
                                                    {
                                                        displayTitle += "[" + employee.Title + "]";
                                                    }
                                                    if (!string.IsNullOrEmpty(employee.Email))
                                                    {
                                                        displayTitle += "- " + employee.Email + "";
                                                    }
                                                    <option value="@employee.Id">@employee.FullName @displayTitle</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-12">
                                        <div class="form-group">
                                            <label class="control-label">Mã chấm công</label>
                                            <input asp-for="Fg" class="form-control form-control-lg aaa" data-type="code" />
                                        </div>
                                    </div>
                                    <div class="col-12">
                                        @{
                                            var fromdatesearch = Model.Tu > Constants.MinDate ? Model.Tu.ToString("dd/MM/yyyy") : "";
                                            var todatesearch = Model.Den > Constants.MinDate ? Model.Den.ToString("dd/MM/yyyy") : "";
                                            var disableThang = false;
                                            if (string.IsNullOrEmpty(Model.Thang))
                                            {
                                                disableThang = true;
                                            }
                                        }
                                        <span class="mr-2 text-muted text-small text-nowrap">Tháng:</span>
                                        <select asp-for="Thang" class="form-control form-control-lg custom-select ddl-times">
                                            @{
                                                foreach (var item in Model.MonthYears)
                                                {
                                                    <option value="@item.Month-@item.Year">@item.Month/@item.Year</option>
                                                }
                                            }
                                        </select>
                                        <span class="mr-2 text-muted text-small text-nowrap">Từ:</span>
                                        <input class="from-date form-control datepicker datepicker-lg" value="@fromdatesearch" />
                                        <span class="mr-2 text-muted text-small text-nowrap">đến:</span>
                                        <input class="to-date form-control datepicker datepicker-lg" value="@todatesearch" />

                                        <input type="hidden" name="Tu" class="tu-ngay" value="@Model.Tu.ToString("MM-dd-yyyy")" />
                                        <input type="hidden" name="Den" class="den-ngay" value="@Model.Den.ToString("MM-dd-yyyy")" />
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-12">
                                        <label class="control-label"><small>Bấm nút hoặc Enter</small></label>
                                        <button class="btn btn-primary btn-lg btn-block btn-search" type="submit"><i class="icon-magnifying-glass"></i> Tìm kiếm</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12 table-responsive-sm">
                        <table class="table table-responsive-sm table-bordered table-striped table-hover floating-header">
                            <thead style="background-color:lightgrey">
                                <tr>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>#</th>
                                    <th rowspan="2" style="vertical-align:middle;text-align:center;font-weight:bold" nowrap>Họ và tên</th>
                                    <th rowspan="2" style="vertical-align:middle;text-align:center;font-weight:bold" nowrap>Chức vụ</th>
                                    <th rowspan="2" style="vertical-align:middle;text-align:center;font-weight:bold" nowrap>Mã chấm công</th>
                                    <th colspan="@calDate" style="text-align:center;font-weight:bold" nowrap>Chi tiết</th>
                                    <th colspan="9" style="vertical-align:middle;font-weight:bold">Tổng</th>
                                </tr>
                                <tr>
                                    @{
                                        for (DateTime date = Model.Tu; date <= Model.Den; date = date.AddDays(1.0))
                                        {
                                            <td style="text-align:center; color:red">
                                                <div class="rotate">
                                                    @date.ToString("dd/MM/yyyy")
                                                </div>
                                            </td>
                                        }
                                    }
                                    <td style="text-align:center; color:red">
                                        Ngày làm việc
                                    </td>
                                    <td style="text-align:center; color:red">
                                        Nghỉ phép
                                    </td>
                                    <td style="text-align:center; color:red">
                                        Nghỉ hưởng lương
                                    </td>
                                    <td style="text-align:center; color:red">
                                        Nghỉ không lương
                                    </td>
                                    <td style="text-align:center; color:red">
                                        Tăng ca ngày thường (giờ)
                                    </td>
                                    <td style="text-align:center; color:red">
                                        Tăng ca chủ nhật (giờ)
                                    </td>
                                    <td style="text-align:center; color:red">
                                        Tăng ca ngày lễ (giờ)
                                    </td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">Trễ (phút)</div>
                                    </td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">Sớm (phút)</div>
                                    </td>
                                </tr>
                            </thead>
                            <tbody class="font-14">
                                @{
                                    int iNo = 1;
                                    var timeKeeperDisplays = Model.TimeKeeperDisplays;
                                    foreach (var employee in timeKeeperDisplays)
                                    {
                                        double workday = 0;
                                        double nghiphep = 0;
                                        double nghihuongluong = 0;
                                        double nghikhongluong = 0;
                                        double tangcangaythuong = 0;
                                        double tangcachunhat = 0;
                                        double tangcale = 0;
                                        double late = 0;
                                        double early = 0;
                                        var employeeWorkTimeLogs = employee.EmployeeWorkTimeLogs;
                                        var sortTimes = employeeWorkTimeLogs.OrderBy(m => m.Date).ToList();
                                <tr>
                                    <td>@iNo</td>
                                    <td>@employee.FullName</td>
                                    <td>@employee.ChucVu</td>
                                    <td>
                                        @employee.EnrollNumber
                                    </td>
                                    @for (DateTime date = Model.Tu; date <= Model.Den; date = date.AddDays(1.0))
                                    {
                                        var time = sortTimes.Where(m => m.Date.Equals(date)).FirstOrDefault();
                                        if (time != null)
                                        {
                                            // First, không tính 15p
                                            var timeoutin = time.Out - time.In;
                                            if (timeoutin.HasValue && timeoutin.Value.TotalHours > 6)
                                            {
                                                workday++;
                                            }
                                            else
                                            {
                                                workday += time.WorkDay;
                                            }

                                            if (time.Mode == (int)ETimeWork.LeavePhep)
                                            {
                                                nghiphep += time.SoNgayNghi;
                                            }
                                            late += time.Late.TotalMinutes;
                                            early += time.Early.TotalMinutes;

                                            <td nowrap>
                                                <div>
                                                    @{
                                                        var displayInOut = string.Empty;
                                                        if (time.In.HasValue)
                                                        {
                                                            displayInOut += time.In.Value.ToString(@"hh\:mm");
                                                        }
                                                        if (time.Out.HasValue)
                                                        {
                                                            if (!string.IsNullOrEmpty(displayInOut))
                                                            {
                                                                displayInOut += " - ";
                                                            }
                                                            displayInOut += time.Out.Value.ToString(@"hh\:mm");
                                                        }
                                                    }
                                                    <span>@displayInOut</span>
                                                </div>
                                                <div>
                                                    @{
                                                        if (time.Logs != null && time.Logs.Count > 0)
                                                        {
                                                            <small>Chi tiết:</small>
                                                            foreach (var log in time.Logs)
                                                            {
                                                                <p style="margin-bottom: 0;"><small>@log.Date.ToString("dd/MM/yyyy HH:mm:ss")</small></p>
                                                            }
                                                            var giotangca = Math.Round(time.TangCaThucTe.TotalHours, 2);
                                                            var statusTangCa = time.StatusTangCa;
                                                            if (giotangca >= 0.5)
                                                            {
                                                                <div class="card">
                                                                    <div class="card-body">
                                                                        <span>Thông tin tăng ca:</span>
                                                                        <br />
                                                                        <span class="badge badge-danger">@Constants.CTSTimeWork(time.Mode)</span>
                                                                        <br />
                                                                        <small>Giờ thực tế: <span class="badge badge-info">@giotangca</span></small>
                                                                        <br />
                                                                        @if (statusTangCa < (int)ETangCa.DongY)
                                                                        {
                                                                            <form class="xac-nhan-tang-ca-form" method="post" action="/@Constants.LinkTimeKeeper.Main/@Constants.LinkTimeKeeper.XacNhanTangCa" enctype="multipart/form-data">
                                                                                <input type="hidden" name="id" value="@time.Id" />
                                                                                <input type="hidden" name="trangthai" value="1" />
                                                                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                                                                <div class="mb-2">
                                                                                    <small>
                                                                                        Xác nhận:
                                                                                        <input type="text" name="thoigian" value="@giotangca" class="form-control-tang-ca" />
                                                                                    </small>
                                                                                </div>
                                                                                <div class="mb-2">
                                                                                    <button type="submit" class="btn btn-sm btn-primary btn-xac-nhan-tang-ca"><i class="icon-save"></i>Xác nhận</button>
                                                                                </div>
                                                                            </form>
                                                                            <form class="khong-xac-nhan-tang-ca-form" method="post" action="/@Constants.LinkTimeKeeper.Main/@Constants.LinkTimeKeeper.XacNhanTangCa" enctype="multipart/form-data">
                                                                                <input type="hidden" name="id" value="@time.Id" />
                                                                                <input type="hidden" name="trangthai" value="0" />
                                                                                <div>
                                                                                    <button type="submit" class="btn btn-sm btn-secondary btn-khong-xac-nhan-tang-ca" data-dismiss="modal"><i class="fas fa-times"></i>Không xác nhận</button>
                                                                                </div>
                                                                            </form>
                                                                        }
                                                                        else
                                                                        {
                                                                            var giotangcaxacnhan = Math.Round(time.TangCaDaXacNhan.TotalHours, 2);
                                                                            if (statusTangCa == (int)ETangCa.DongY)
                                                                            {
                                                                                if (time.Mode == (int)ETimeWork.Normal)
                                                                                {
                                                                                    tangcangaythuong += time.TangCaDaXacNhan.TotalHours;
                                                                                }
                                                                                else if (time.Mode == (int)ETimeWork.Sunday)
                                                                                {
                                                                                    tangcachunhat += time.TangCaDaXacNhan.TotalHours;
                                                                                }
                                                                                else if (time.Mode == (int)ETimeWork.Holiday)
                                                                                {
                                                                                    tangcale += time.TangCaDaXacNhan.TotalHours;
                                                                                }
                                                                            }
                                                                            var statusBag = statusTangCa == (int)ETangCa.TuChoi ? "badge-pill" : "badge-info";
                                                                            <small>Giờ xác nhận: <span class="badge @statusBag">@giotangcaxacnhan</span></small>
                                                                        }
                                                                    </div>
                                                                </div>
                                                            }
                                                        }

                                                        if (!string.IsNullOrEmpty(time.Reason))
                                                        {
                                                            <small>@time.Reason</small>
                                                            var displayReason = time.Reason;
                                                            if (time.Mode != (int)ETimeWork.LeavePhep && !string.IsNullOrEmpty(time.ReasonDetail))
                                                            {
                                                                <br />
                                                                <small data-toggle="tooltip" title="@time.ReasonDetail">@Constants.Truncate(time.ReasonDetail, 12)</small>
                                                            }
                                                        }
                                                    }
                                                </div>
                                            </td>
                                        }
                                        else
                                        {
                                            <td nowrap>
                                                <span class="badge badge-info">N/A</span>
                                            </td>
                                        }
                                    }

                                    <td>@workday</td>
                                    <td>@nghiphep</td>
                                    <td>@nghihuongluong</td>
                                    <td>@nghikhongluong</td>
                                    <td>@tangcangaythuong</td>
                                    <td>@tangcachunhat</td>
                                    <td>@tangcale</td>
                                    <td>@Math.Round(late, 0)</td>
                                    <td>@Math.Round(early, 0)</td>

                                </tr>
                                        iNo++;
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/js/bang-cham-cong.js?@Constants.VersionJs"></script>
}



