@using Common.Utilities;
@using ViewModels;
@model BangLuongViewModel
@{
    Layout = "~/Views/Shared/_LayoutSocialFbFS.cshtml";
    var login = User.Identity.Name;
    var loginUserName = User.Claims.Where(m => m.Type.Equals("UserName")).FirstOrDefault().Value;
    var rightSalaryReal = false;
    if (!string.IsNullOrEmpty(login))
    {
        rightSalaryReal = true;
    }
}
<style>
    th:nth-child(3), td:nth-child(3) {
        position: sticky;
        left: 0px;
    }

    td:nth-child(3) {
        background-color: lightgoldenrodyellow;
    }
</style>
<div class="main-container">
    <nav aria-label="breadcrumb" role="navigation" class="bg-primary text-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Bảng lương áp dụng</li>
                    </ol>
                </div>
            </div>
        </div>
    </nav>

    <section class="flush-with-above space-0">
        <div class="bg-white">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link" href="/@Constants.LinkSalary.Main/@Constants.LinkSalary.ThangBangLuongReal">THANG LƯƠNG</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" href="/@Constants.LinkSalary.Main/@Constants.LinkSalary.BangLuongReal">BẢNG LƯƠNG</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- MAIN -->
    <section class="flush-with-above height-80 d-block">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="real" role="tabpanel" aria-labelledby="real-tab">
                <div class="row mb-3">
                    <div class="col-12">
                        <a href="/@Constants.LinkSalary.Main/@Constants.LinkSalary.BangLuongReal/@Constants.LinkSalary.Update" class="btn btn-success btn-edit-real" data-toggle="tooltip" title="Bấm thay đổi thang bảng lương.">
                            <i class="icon icon-edit"></i>Chỉnh sửa
                        </a>
                        <a class="btn btn-info d-none" href="/@Constants.LinkSalary.Main/@Constants.LinkSalary.ThangBangLuongReal/@Constants.LinkSalary.Export" data-toggle="tooltip" title="Xuất ra tài liệu file excel.">
                            <i class="fas fa-download"></i> Xuất excel
                        </a>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 d-none">
                        <b>MỨC LƯƠNG TỐI THIỂU VÙNG:</b> <b>@String.Format("{0:#,###,###}", Math.Round((double)Model.SalaryMucLuongVung.ToiThieuVungQuiDinh / 10000d, 0) * 10000)</b> đồng/tháng
                    </div>
                    <div class="col-12">
                        Mức lương tối thiểu mà doanh nghiệp đang áp dụng: <b>@String.Format("{0:#,###,###}", Math.Round((double)Model.SalaryMucLuongVung.ToiThieuVungDoanhNghiepApDung / 10000d, 0) * 10000)</b> đồng/tháng
                    </div>
                </div>
                <div class="card card-sm">
                    <div class="card-header bg-secondary d-flex justify-content-between align-items-center">
                        <div>
                            <h6>BẢNG LƯƠNG</h6>(ĐVT: đồng)
                        </div>
                        <form class="d-flex align-items-center" method="get" action="/@Constants.LinkSalary.Main/@Constants.LinkSalary.BangLuongReal" id="form-main">
                            <span class="mr-2 text-muted text-small text-nowrap">Tháng:</span>
                            <select asp-for="thang" class="custom-select ddl-times">
                                @{
                                    foreach (var item in Model.MonthYears)
                                    {
                                        <option value="@item.Month-@item.Year">@item.Month/@item.Year</option>
                                    }
                                }
                            </select>
                        </form>
                    </div>
                </div>
                <div class="row">
                    @{
                        <div class="table-responsive-sm">
                            <table class="table table-responsive-sm table-bordered">
                                <tr style="background-color:white" class="header">
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>STT</th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>Mã</th>
                                    <th rowspan="2" style="vertical-align:middle;text-align:center;font-weight:bold" nowrap>Họ và tên</th>
                                    <th rowspan="2" style="vertical-align:middle;text-align:center;font-weight:bold" nowrap>Chức vụ</th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold">Thâm niên làm việc</th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>Bậc</th>
                                    <td colspan="3" style="background-color:yellow;text-align:center;font-weight:bold">Thâm niên</td>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>Lương CB</th>
                                    <td colspan="4" style="vertical-align:middle;font-weight:bold" nowrap>PHỤ CẤP (P2)</td>
                                    <td colspan="7" style="vertical-align:middle;font-weight:bold" nowrap>PHÚC LỢI KHÁC (P2)</td>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold">
                                        <div class="rotate">Lương cơ bản (tháng) bao gồm phụ cấp</div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Ngày công làm việc
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Phút công làm việc
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Ngày nghỉ phép hưởng lương
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Ngày nghỉ Lễ Tết hưởng lương
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Công CN (giờ)
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Công CN (phút)
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Công tăng ca ngày thường (giờ)
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Công tăng ca ngày thường (phút)
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Công lễ tết
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Công lễ tết (phút)
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Công tác xa
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Mức đạt trong tháng
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Lương theo doanh thu doanh số
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Tổng bùn bốc
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Thành tiền bốc bùn
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Lương khác
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Thi đua
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold" nowrap>
                                        <div class="rotate">
                                            Hỗ trợ ngoài lương
                                        </div>
                                    </th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold">Tổng thu nhập</th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold">Tổng thu nhập (phút)</th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold">BHXH BHYT</th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold">Lương tham gia BHXH</th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold">Tạm ứng</th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold">Thực lãnh</th>
                                    <th rowspan="2" style="vertical-align:middle;font-weight:bold">Thực lãnh (phút)</th>
                                </tr>
                                <tr style="background-color:white!important">
                                    <td style="background-color:yellow;text-align:center; color:red">Năm</td>
                                    <td style="background-color:yellow;text-align:center; color:red">Tháng</td>
                                    <td style="background-color:yellow;text-align:center; color:red">Ngày</td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">
                                            NẶNG NHỌC ĐỘC HẠI
                                        </div>
                                    </td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">TRÁCH NHIỆM</div>
                                    </td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">THÂM NIÊN</div>
                                    </td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">THU HÚT</div>
                                    </td>

                                    <td style="text-align:center; color:red">
                                        <div class="rotate">XĂNG</div>
                                    </td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">ĐIỆN THOẠI</div>
                                    </td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">CƠM</div>
                                    </td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">Kiêm nhiệm</div>
                                    </td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">BHYT ĐẶC BIỆT</div>
                                    </td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">VỊ TRÍ CẦN KN NHIỀU NĂM</div>
                                    </td>
                                    <td style="text-align:center; color:red">
                                        <div class="rotate">Vị trí đặc thù</div>
                                    </td>
                                </tr>
                                <tbody>
                                    @{
                                        var i = 1;
                                        var groupLocation = (from s in Model.SalaryEmployeeMonths.Where(m => !m.NoiLamViecOrder.Equals(0))
                                                             group s by new
                                                             {
                                                                 s.NoiLamViecOrder,
                                                                 s.NoiLamViec
                                                             }
                                                                        into l
                                                             select new
                                                             {
                                                                 NoiLamViecOrder = l.Key.NoiLamViecOrder,
                                                                 NoiLamViec = l.Key.NoiLamViec,
                                                                 salaries = l.ToList(),
                                                             }).ToList();

                                        var locations = groupLocation.OrderBy(m => m.NoiLamViecOrder).ToList();
                                        foreach (var location in locations)
                                        {
                                            <tr>
                                                <td style="background-color:red"></td>
                                                <td colspan="46" style="background-color:red">
                                                    @location.salaries[0].NoiLamViec
                                                </td>
                                            </tr>
                                            var locationSalaries = location.salaries;

                                            var groupDepartment = (from a in locationSalaries
                                                                   group a by new
                                                                   {
                                                                       a.PhongBan,
                                                                       a.PhongBanOrder
                                                                   }
                                                        into b
                                                                   select new
                                                                   {
                                                                       PhongBan = b.Key.PhongBan,
                                                                       PhongBanOrder = b.Key.PhongBanOrder,
                                                                       salaries = b.ToList(),
                                                                   }).ToList();
                                            var departments = groupDepartment.OrderBy(m => m.PhongBanOrder);

                                            foreach (var department in departments)
                                            {
                                                <tr><td colspan="2" style="background-color:forestgreen"></td><td colspan="45" style="background-color:forestgreen">@department.PhongBan</td></tr>
                                                foreach (var item in department.salaries)
                                                {
                                                <tr>
                                                    <td>
                                                        @i
                                                    </td>
                                                    <td>
                                                        @item.MaNhanVien <small>@item.ViTriCode</small>
                                                    </td>
                                                    <td nowrap>
                                                        @item.FullName
                                                    </td>
                                                    <td nowrap>
                                                        <small class="bold">@item.ChucVu</small>
                                                    </td>
                                                    <td>
                                                        @item.ThamNienLamViec.ToString("dd/MM/yyyy")
                                                    </td>
                                                    <td>
                                                        @item.Bac
                                                    </td>
                                                    <td>
                                                        @item.ThamNienYear
                                                    </td>
                                                    <td>
                                                        @item.ThamNienMonth
                                                    </td>
                                                    <td>
                                                        @item.ThamNienDay
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.LuongCanBan / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.NangNhocDocHai / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.TrachNhiem / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.ThamNien / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.ThuHut / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.Xang / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.DienThoai / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.Com / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.KiemNhiem / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.BhytDacBiet / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.ViTriCanKnNhieuNam / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.ViTriDacThu / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.LuongCoBanBaoGomPhuCap / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.NgayCongLamViec)
                                                    </td>
                                                    <td>
                                                        @{
                                                            if (item.PhutCongLamViec > 0)
                                                            {
                                                                <span>@String.Format("{0:#,###,###}", item.PhutCongLamViec)</span>
                                                                @*var miss = item.MauSo * 8 * 60 - item.PhutCongLamViec;
                                                                if (miss > 0)
                                                                {
                                                                <small>Thiếu: @String.Format("{0:#,###,###}", miss) phút</small>
                                                                }*@
                                                            }
                                                            else
                                                            {
                                                                <span>--</span>
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.NgayNghiPhepHuongLuong)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.NgayNghiLeTetHuongLuong)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.CongCNGio)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.CongCNPhut)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.CongTangCaNgayThuongGio)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.CongTangCaNgayThuongPhut)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.CongLeTet)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.CongLeTetPhut)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.CongTacXa)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.MucDatTrongThang)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.LuongTheoDoanhThuDoanhSo)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.TongBunBoc)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.ThanhTienBunBoc)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.LuongKhac)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.ThiDua)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", item.HoTroNgoaiLuong)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.TongThuNhap / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.TongThuNhapMinute / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @{
                                                            if (Model.calBHXH)
                                                            {
                                                                @String.Format("{0:#,###,###}", Math.Round((double)item.BHXHBHYT / 10000d, 0) * 10000)
                                                            }
                                                            else
                                                            {
                                                                <small>chưa tới ngày đóng</small>
                                                            }
                                                        }
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.LuongThamGiaBHXH / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.TamUng / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.ThucLanh / 10000d, 0) * 10000)
                                                    </td>
                                                    <td>
                                                        @String.Format("{0:#,###,###}", Math.Round((double)item.ThucLanhMinute / 10000d, 0) * 10000)
                                                    </td>
                                                </tr>
                                                    i++;
                                                }
                                            }
                                        }
                                        //foreach (var item in Model.SalaryEmployeeMonths)
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script type="text/javascript" src="~/js/bang-luong.js?@DateTime.Now.Ticks"></script>
}



