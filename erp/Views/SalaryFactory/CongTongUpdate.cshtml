@using Common.Utilities;
@using Common.Enums;
@using ViewModels;
@model BangLuongViewModel
@{
    Layout = "~/Views/Shared/_LayoutSocialFbFS.cshtml";
    var login = User.Identity.Name;
    var loginUserName = User.Claims.Where(m => m.Type.Equals("UserName")).FirstOrDefault().Value;
}
<link href="~/assets/wingman/css/big-screen.css" rel="stylesheet" />
<style>
    #myProgress {
        width: 100%;
        background-color: grey;
    }

    #myBar {
        width: 1%;
        height: 30px;
        background-color: green;
    }

    .employeekpi tbody th:nth-child(3), .employeekpi tbody td:nth-child(3) {
        position: sticky;
        left: 0px;
    }

    .employeekpi tbody td:nth-child(3) {
        background-color: lightgoldenrodyellow;
    }

    .kpi tbody th:nth-child(2), .kpi tbody td:nth-child(2) {
        position: sticky;
        left: 0px;
    }

    .kpi tbody td:nth-child(2) {
        background-color: lightgoldenrodyellow;
    }
</style>

<div class="main-container">
    <nav aria-label="breadcrumb" role="navigation" class="bg-primary text-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Trang chủ</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">Công tổng</li>
                    </ol>
                </div>
            </div>
        </div>
    </nav>

    <section class="flush-with-above space-0">
        <div class="bg-white">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <ul class="nav nav-tabs" id="myTab" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" href="/@Constants.LinkSalary.Main/@Constants.LinkSalary.Factory/@Constants.LinkSalary.CongTong/@Constants.ActionLink.Update">CÔNG TỔNG & HỔ TRỢ CƠM</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link " href="/@Constants.LinkSalary.Main/@Constants.LinkSalary.Factory/@Constants.LinkSalary.BangLuong/@Constants.ActionLink.Update">BẢNG LƯƠNG</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" target="_blank" href="/@Constants.LinkTimeKeeper.Main/@Constants.LinkTimeKeeper.Timer?khoi=@ESalaryType.NM">CHẤM CÔNG</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/@Constants.LinkCredit.Main/@Constants.LinkSalary.Factory/@Constants.LinkCredit.CreditsNM/@Constants.ActionLink.Update">ỨNG LƯƠNG</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" target="_blank" href="/@Constants.LinkSalary.Main/@Constants.LinkSalary.ThangLuongTrue/@Constants.LinkSalary.ThangLuong">THANG LƯƠNG</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/@Constants.LinkSalary.Main/@Constants.LinkSalary.Factory/@Constants.LinkSalary.Setting/@Constants.ActionLink.Update">THAM SỐ</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section class="flush-with-above height-80 d-block">
        <div class="tab-content">
            <div class="tab-pane fade show active" id="sale" role="tabpanel" aria-labelledby="sale-tab">
                <div class="container">
                    <div class="card card-sm">
                        <div class="card-header bg-secondary d-flex justify-content-between align-items-center">
                            <div>
                                <h6>Công tổng và hỗ trợ cơm</h6>(ĐVT: đồng)
                            </div>
                            <form class="d-flex align-items-center" method="get" action="/@Constants.LinkSalary.Main/@Constants.LinkSalary.Factory/@Constants.LinkSalary.CongTong/@Constants.ActionLink.Update" id="form-main">
                                <span class="mr-2 text-muted text-small text-nowrap">Tháng:</span>
                                <select asp-for="thang" class="custom-select ddl-times">
                                    @{
                                        foreach (var item in Model.MonthYears)
                                        {
                                            <option value="@item.Month-@item.Year">@item.Month/@item.Year</option>
                                        }
                                    }
                                </select>
                            </form>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12">
                            <a href="/@Constants.LinkSalary.Main/@Constants.LinkSalary.Factory/@Constants.LinkSalary.CongTong" class="btn btn-default btn-list" data-toggle="tooltip" title="Bấm trở về.">
                                <i class="icon icon-back"></i>Trở về
                            </a>
                            <a href="/@Constants.LinkSalary.Main/@Constants.LinkSalary.Factory/@Constants.LinkSalary.NhaMayTemplate" class="btn btn-success btn-list" data-toggle="tooltip" title="Bấm trở về.">
                                <i class="icon icon-back"></i>Tải mẫu dữ liệu
                            </a>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12">
                            <form method="post" action="/@Constants.LinkSalary.Main/@Constants.LinkSalary.Factory/@Constants.LinkSalary.NhaMayImport" enctype="multipart/form-data">
                                <div class="row">
                                    <div class="col-md-4">
                                        <input type="file" name="files" class="form-control fUpload" />
                                    </div>
                                    <div class="col-md-8">
                                        <input type="button" class="btn btn-danger btnUpload" value="Tải lên" />
                                    </div>
                                </div>
                                <br />
                                <div class="progress">
                                    <div class="progress-bar progress-bar-striped progress-bar-animated" style="width:0%"></div>
                                </div>
                                <div id="dvData"></div>
                            </form>
                        </div>
                    </div>

                    <form action="/@Constants.LinkSalary.Main/@Constants.LinkSalary.Factory/@Constants.LinkSalary.CongTong/@Constants.LinkSalary.Update" method="post" class="data-form">
                        <input type="hidden" name="thang" value="@Model.thang" />
                        <input type="hidden" id="hidCalculator" value="/@Constants.LinkSalary.Main/@Constants.LinkSalary.Factory/@Constants.LinkSalary.Calculator" />
                        <div class="row mb-3">
                            <div class="col-md-3 col-sm-6 col-12">
                                <button type="submit" class="btn btn-lg btn-block btn-danger btn-submit" data-toggle="tooltip" title="Bấm cập nhật dữ liệu kinh doanh."><i class="icon-save"></i>&nbsp;Cập nhật</button>
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-12 table-responsive-sm">
                                <table class="table table-responsive-sm table-bordered table-striped table-hover floating-header employeekpi">
                                    <thead style="background-color:lightgrey">
                                        <tr>
                                            <td>#</td>
                                            <td>Mã nhân viên</td>
                                            <td>Họ tên</td>
                                            <td>Chức vụ</td>
                                            <td>Công tổng</td>
                                            <td>Cơm SX</td>
                                            <td>Cơm KD</td>
                                            <td>Giờ tăng ca</td>
                                            <td>Giờ làm việc CN</td>
                                            <td>Giờ làm việc Lễ/Tết</td>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @{
                                            int i = 1;
                                            int iE = 0;
                                            foreach (var item in Model.SalaryNhaMayCongs)
                                            {
                                        <tr class="tr-@iE" data-id="@iE">
                                            <td>
                                                @i
                                                <input type="hidden" name="SalaryNhaMayCongs[@iE].Id" value="@item.Id" />
                                                <input type="hidden" name="SalaryNhaMayCongs[@iE].EmployeeId" value="@item.EmployeeId" />
                                                <input type="hidden" name="SalaryNhaMayCongs[@iE].EmployeeName" value="@item.EmployeeName" />
                                                <input type="hidden" name="SalaryNhaMayCongs[@iE].EmployeeChucVu" value="@item.EmployeeChucVu" />
                                                <input type="hidden" name="SalaryNhaMayCongs[@iE].Month" value="@item.Month" />
                                                <input type="hidden" name="SalaryNhaMayCongs[@iE].Year" value="@item.Year" />
                                            </td>
                                            <td>@item.EmployeeCode</td>
                                            <td nowrap>@item.EmployeeName</td>
                                            <td nowrap>@item.EmployeeChucVu</td>
                                            <td>
                                                <input value="@item.CongTong" name="SalaryNhaMayCongs[@iE].CongTong" class="form-control width100 numeric congtong-@iE" data-id="congtong-@iE" />
                                            </td>
                                            <td>
                                                <input value="@item.ComSX" name="SalaryNhaMayCongs[@iE].ComSX" class="form-control width100 numeric comsx-@iE" data-id="comsx-@iE" />
                                            </td>
                                            <td>
                                                <input value="@item.ComKD" name="SalaryNhaMayCongs[@iE].ComKD" class="form-control width100 numeric comkd-@iE" data-id="comkd-@iE" />
                                            </td>
                                            <td>
                                                <input value="@item.GioTangCa" name="SalaryNhaMayCongs[@iE].GioTangCa" class="form-control width100 numeric giotangca-@iE" data-id="giotangca-@iE" />
                                            </td>
                                            <td>
                                                <input value="@item.GioLamViecCN" name="SalaryNhaMayCongs[@iE].GioLamViecCN" class="form-control width100 numeric giolamvieccn-@iE" data-id="giolamvieccn-@iE" />
                                            </td>
                                            <td>
                                                <input value="@item.GioLamViecLeTet" name="SalaryNhaMayCongs[@iE].GioLamViecLeTet" class="form-control width100 numeric giolamviecletet-@iE" data-id="giolamviecletet-@iE" />
                                            </td>
                                        </tr>
                                                i++;
                                                iE++;
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>

@section scripts {
    <script type="text/javascript" src="~/js/salary-nha-may-cong-tong-update.js?@DateTime.Now.Ticks"></script>
}



