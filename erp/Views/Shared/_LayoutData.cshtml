            console.log(url);
            $.ajax({
                url: '/language/change/',
                data: { language: language },
                type: 'post',
                dataType: 'json',
                success: function (data) {
                    if (data == true) {
                        //window.location.reload();
                        console.log(url);
                        if (typeof url !== "undefined") {
                            window.location.replace(url);
                        }
                        else {
                            window.location.reload();
                        }
                    }
                }
            });
        });
    </script>

