@using System.Globalization;
@using Common.Utilities;
@using ViewModels
@model TextViewModel

@{

}

@Html.ValidationSummary()

<div class="main-container">
    <nav aria-label="breadcrumb" role="navigation" class="bg-primary text-white">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/">Home</a>
                        </li>
                        <li class="breadcrumb-item active" aria-current="page">
                            <a href="/Text">Cài đặt thông số</a>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </nav>

    <section>
        <div class="container">
            <form action="/text/disable" method="post" class="data-form">
                <input type="hidden" asp-for="Text.Id" />
                <p>Thông tin</p>
                <div class="form-group">
                    <label class="control-label">Từ khóa</label>
                    <span class="badge badge-info">@Model.Text.Code</span>
                </div>
                <div class="form-group">
                    <label class="control-label">Giá trị</label>
                    <span class="badge badge-info">@Model.Text.Value</span>
                </div>
                <button type="submit" class="btn btn-block btn-danger" title="Ẩn dữ liệu"><i class="far fa-save"></i> Xóa dữ liệu</button>
            </form>
        </div>
    </section>
</div>

@section scripts {
    <script type="text/javascript" src="~/js/text-data.js?@Constants.VersionJs"></script>
}

