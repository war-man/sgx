
@{
    ViewData["Title"] = "Tải lên thống kê nhà máy";
    Layout = "~/Views/Shared/_LayoutSocialFb.cshtml";
}
<style>
    #myProgress {
        width: 100%;
        background-color: grey;
    }

    #myBar {
        width: 1%;
        height: 30px;
        background-color: green;
    }
</style>

<h2>@ViewData["Title"]</h2>
<form method="post" action="/tai-lieu/nha-may/thong-ke/bao-cao-tk" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <input type="file" name="files" class="form-control fUpload" />
        </div>
        <div class="col-md-8">
            <input type="button" class="hidden btnUpload" value="Tải lên tài liệu BCTK" />
        </div>
    </div>
    <br />
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" style="width:0%"></div>
    </div>
    <div class="dvData"></div>
</form>

<form method="post" action="/tai-lieu/nha-may/thong-ke/tuan/" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <input type="file" name="files" class="form-control fUpload" />
        </div>
        <div class="col-md-8">
            <input type="button" class="hidden btnUpload" value="Tải lên tài liệu tuần" />
        </div>
    </div>
    <br />
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" style="width:0%"></div>
    </div>
    <div class="dvData"></div>
</form>

<form method="post" action="/tai-lieu/nha-may/nha-thau" enctype="multipart/form-data">
    <div class="row">
        <div class="col-md-4">
            <input type="file" name="files" class="form-control fUpload" />
        </div>
        <div class="col-md-8">
            <input type="button" class="hidden btnUpload" value="Tải lên dữ liệu nhà thầu" />
        </div>
    </div>
    <br />
    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" style="width:0%"></div>
    </div>
    <div class="dvData"></div>
</form>

@section scripts {
    @{
        /**/

        await Html.RenderPartialAsync("_ValidationScriptsPartial");
        <script src="~/lib/jq-ajax-progress-master/jq-ajax-progress.min.js"></script>
        <script src="~/js/file-factory-report.js?@DateTime.Now.Ticks"></script>
    }
}